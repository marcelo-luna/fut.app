@model IList<geradorTimes.Models.Jogador>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Time A</div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Posição</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var jogador in Model)
                            {
                                if (jogador.Time.Id.Equals(1))
                                {
                                    <tr>
                                        <td>@jogador.Nome</td>
                                        <td>
                                            @if (jogador.Posicao.Equals(1))
                                            {<p>Defesa</p> }
                                            else
                                            {<p>Ataque</p>}
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Time B</div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Posição</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var jogador in Model)
            {
                if (jogador.Time.Id.Equals(2))
                {
                                    <tr>
                                        <td>@jogador.Nome</td>
                                        <td>
                                            @if (jogador.Posicao.Equals(1))
                                            {<p>Defesa</p> }
                                            else
                                            {<p>Ataque</p>}
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
